---
layout: null
permalink: /feed.json
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": {{ site.title | jsonify }},
  "home_page_url": {{ site.url | append: site.baseurl | append: '/' | jsonify }},
  "feed_url": {{ site.url | append: site.baseurl | append: '/feed.json' | jsonify }},
  "description": {{ site.description | jsonify }},
  "items": [
    {% for post in site.posts limit: 50 %}
      {
        "id": {{ post.url | absolute_url | jsonify }},
        "url": {{ post.url | absolute_url | jsonify }},
        "title": {{ post.title | jsonify }},
        "date_published": "{{ post.date | date_to_xmlschema }}",
        "date_modified": "{{ post.last_modified_at | default: post.date | date_to_xmlschema }}",
        "summary": {{ post.description | default: post.excerpt | strip_html | strip_newlines | truncate: 240 | jsonify }},
        "tags": {{ post.tags | jsonify }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
