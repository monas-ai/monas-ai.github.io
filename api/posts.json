---
layout: null
permalink: /api/posts.json
---
{
  "generated_at": "{{ site.time | date_to_xmlschema }}",
  "posts": [
    {% for post in site.posts %}
      {% assign words = post.content | strip_html | number_of_words: 'auto' %}
      {% assign read_time = words | divided_by: 180 %}
      {% unless read_time > 0 %}{% assign read_time = 1 %}{% endunless %}
      {
        "title": {{ post.title | jsonify }},
        "url": {{ post.url | absolute_url | jsonify }},
        "date": "{{ post.date | date_to_xmlschema }}",
        "updated": "{{ post.last_modified_at | default: post.date | date_to_xmlschema }}",
        "tags": {{ post.tags | jsonify }},
        "category": {{ post.categories | first | jsonify }},
        "summary": {{ post.description | default: post.excerpt | strip_html | strip_newlines | truncate: 200 | jsonify }},
        "reading_time": {{ read_time }},
        "content_sha": "{{ post.content | strip_html | strip_newlines | sha1 }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
